# Restart yabai and skhd
ctrl + cmd + alt - y : brew services restart yabai
ctrl + cmd + alt - s : brew services restart skhd

# test skhd
ctrl + cmd + alt - t : say "skhd on"

# move between spaces
# enable in System prefs > Keyboard -> Shortcuts -> Mission Control

# close windows the yabai way
# ctrl + alt - w : yabai -w window --close

# toggle between horizontal and vertical split
alt - space : yabai -m window --toggle split

# fullscreen toggle
ctrl + cmd - space : yabai -m window --toggle zoom-fullscreen

# focus next/prev window in space (OVERRIDES CMD + TAB SYSTEM SHORTCUT)
cmd + shift - tab : yabai -m window --focus next || yabai -m window --focus first

# swap windows in space
alt - tab : yabai -m window --swap next || yabai -m window --swap first
alt + shift - tab : yabai -m window --swap prev || yabai -m window --swap last

# TODO
# cycle monitors (works with 2)
cmd + shift - tab : yabai -m display --focus recent && yabai -m window --focus next || yabai -m window --focus first

# swap windows between monitors, following focus (works with 2 monitors
alt + ctrl - tab : yabai -m window --display recent && yabai -m display --focus recent && yabai -m window --focus next || yabai -m window --focus first

# rotate space
ctrl + cmd - r : yabai -m space --rotate 90

# move windows between spaces
alt - 1 : yabai -m window --space 1
alt - 2 : yabai -m window --space 2
alt - 3 : yabai -m window --space 3
alt - 4 : yabai -m window --space 4
alt - 5 : yabai -m window --space 5
alt - 6 : yabai -m window --space 6
alt - 7 : yabai -m window --space 7
alt - 8 : yabai -m window --space 8
alt - 9 : yabai -m window --space 9

# window change size
alt - left : yabai -m window --resize left:-60:0 || yabai -m window --resize right:-60:0
alt - up : yabai -m window --resize top:0:-60 || yabai -m window --resize bottom:0:-60
alt - right : yabai -m window --resize right:60:0 || yabai -m window --resize left:60:0
alt - down : yabai -m window --resize bottom:0:60 || yabai -m window --resize top:0:60

# send window to next monitor and follow focus
# ctrl + cmd - c  : yabai -m window --display next; yabai -m display --focus next

